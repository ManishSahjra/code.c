#include <stdio.h>

int main() {
    char str[100];
    int i;

    // Input the string
    printf("Enter a string: ");
    scanf("%s", str);

    // Convert lowercase letters to uppercase
    for (i = 0; str[i] != '\0'; i++) {
        if (str[i] >= 'a' && str[i] <= 'z') {
            str[i] = str[i] - 32;
        }
    }

    // Output the result
    printf("Uppercase string: %s\n", str);

    return 0;
}
